#include<stdio.h>
#include<string.h>
int main()
{
    char ch[20];
    int n,i;
    char c;
    int count=0;
    printf("enter name:");
    gets(ch);
    n=strlen(ch);
    for(i=0;i<n;i++)
    {
        c=ch[i];
        switch(c)
        {
            case 'A' :
            case 'a' :
            case 'E' :
            case 'e' :
            case 'I' :
            case 'i' :
            case 'O' :
            case 'o' :
            case 'U' : 
            case 'u' : count++;break;
            default:printf("%c",c);
            
        }
    }
    printf("total number of values:%d", count);
    printf("\ntotal number of values in default:%d", count);
    return 0;
    
}
